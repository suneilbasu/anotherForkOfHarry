<h1>Blog index change1</h1>
<%= params.inspect %>
<p>List of all the current blogs</p>
  <%= form_tag blogs_path, :method => 'get' do %>
    <%= collection_select :blog, :user_id, User.all, :id, :firstname, prompt: true %>
    <%= collection_select :blog, :flag, Blog.all, :flag, :flag %>
    <%= submit_tag "+" %>
    <% end %>
<% @blogs.each do |harry| %>
  <li><%= harry.bodyText %>
  £<%= harry.fee %>
  <%=harry.user.firstname %>
  <%= link_to "edit", blog_path(harry) %>
  <%=harry.flag %>

  </li>
<% end %>
